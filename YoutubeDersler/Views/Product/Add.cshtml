@model YoutubeDersler.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center"><span class="fas fa-plus"></span> Add New Product</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-6">
                            <div class="input-group mb-3">
                                <span class="input-group-text">Product Name</span>
                                <input type="text" class="form-control" asp-for="Product.Name">
                            </div>
                        </div>
                        <div class="form-group col-6 ">
                            <div class="input-group mb-3">
                                <span class="input-group-text">Category</span>
                                <select class="form-control" asp-for="Product.CategoryId" asp-items="@ViewBag.CategoryId">
                                    <option value="0">Choose A Category</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" asp-for="Picture">
                                <label class="input-group-text" for="inputGroupFile02">Upload</label>
                            </div>
                        </div>
                        <div class="form-group col-6">
                            <div class="input-group mb-3">
                                <span class="input-group-text">Price</span>
                                <input type="number" class="form-control" asp-for="Product.Price">
                            </div>
                        </div>
                        <div class="form-group col-6">
                            <div class="input-group mb-3">
                                <span class="input-group-text">Stock</span>
                                <input type="text" class="form-control" asp-for="Product.Stock">
                            </div>
                        </div>
                        <div class="form-group col-12 mb-3">
                            <textarea id="description" class="form-control" asp-for="Product.Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100"><span class="fas fa-save"></span> Save</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#description').trumbowyg();
        })
    </script>
}


