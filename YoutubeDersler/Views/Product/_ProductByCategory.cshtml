@model IEnumerable<Product>



<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Products for @ViewBag.CategoryName</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        @if (Model.Count() == 0)
                        {

                            <div class="alert alert-danger" role="alert">
                                There is no Product for @ViewBag.CategoryName
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped">
                                <tr>
                                    <th>Picture</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                </tr>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td><img src="~/images/@product.Picture" width="50" height="50" style="border-radius: 50%" /></td>
                                        <th><strong>@product.Name</strong></th>
                                        <th><strong>@product.Price € </strong></th>
                                    </tr>
                                }
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



