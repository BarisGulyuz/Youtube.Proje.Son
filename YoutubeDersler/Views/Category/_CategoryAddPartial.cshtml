@model Category
<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus"></span> New Category</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form id="category-add-form" asp-action="Add" onsubmit="return false">
                        <div asp-validation-summary="All" id="validation-summary" aria-hidden="true" class="text-danger"></div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Category Name</span>
                                </div>
                                <input type="text" class="form-control" asp-for="CategoryName">
                                <span asp-validation-for="CategoryName"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="button" id="btnSavee" class="btn btn-success w-100"><span class="fas fa-save"></span> Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

